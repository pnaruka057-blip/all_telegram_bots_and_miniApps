<!-- Interstitial/navigation behaviour (Ads removed) -->
<script>
    (function () {
        // This script preserves the click/navigation behaviour for links marked with data-ad="interstitial"
        // but does NOT load or show any third-party ad SDK. Failures are silent and user is never shown errors.

        const SAFETY_TIMEOUT_MS = 8000;   // fallback navigation delay (keeps previous safety behaviour)
        const NAV_DELAY_MS = 300;         // small async delay to mimic SDK init wait (keeps UX consistent)

        function safeNavigate(href) {
            try {
                // prefer location.assign for normal navigation behaviour
                window.location.assign(href);
            } catch (e) {
                // last resort
                window.location.href = href;
            }
        }

        function attachInterstitialNav() {
            const links = document.querySelectorAll('footer a[data-ad]');
            if (!links || !links.length) return;

            links.forEach(anchor => {
                anchor.addEventListener('click', async function (ev) {
                    try {
                        ev.preventDefault();

                        const href = this.href;
                        // optional: show page loader if present (keep UX consistent)
                        try {
                            const loader = document.getElementById('pageLoader');
                            if (loader && loader.classList.contains('hidden')) loader.classList.remove('hidden');
                        } catch (e) { /* silent */ }

                        // small initial delay (was SDK load delay previously)
                        await new Promise(r => setTimeout(r, NAV_DELAY_MS));

                        // safety timer in case something blocks navigation
                        let navigated = false;
                        const go = () => {
                            if (navigated) return;
                            navigated = true;
                            safeNavigate(href);
                        };
                        const timer = setTimeout(go, SAFETY_TIMEOUT_MS);

                        // No SDK available: we immediately clear timer and navigate.
                        clearTimeout(timer);
                        go();

                        // Note: errors intentionally swallowed to avoid any user-visible messages
                    } catch (err) {
                        try {
                            // fallback navigation even on unexpected error
                            const href = this && this.href ? this.href : '/';
                            window.location.href = href;
                        } catch (_) { /* silent */ }
                    }
                }, { passive: false });
            });
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', attachInterstitialNav);
        } else {
            attachInterstitialNav();
        }
    })();
</script>